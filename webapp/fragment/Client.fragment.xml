<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:core="sap.ui.core" xmlns="sap.m">
	<Table showSeparators="All" class="sapUiResponsiveMargin sapUiResponsivePadding" width="auto">
		<headerToolbar>
			<OverflowToolbar width="auto" height="auto" design="Transparent" visible="true" enabled="true">
				<content>
					<core:Icon src="sap-icon://kpi-managing-my-area" size="1.5rem" color="#9AAF0C"></core:Icon>
					<Title text="Clientes" titleStyle="Auto" width="auto" />
					<ToolbarSpacer />
					<SearchField placeholder="Search" showSearchButton="true" visible="true" width="auto" liveChange="onLiveChangeSearch" />
				</content>
			</OverflowToolbar>
		</headerToolbar>
	
		<columns>
			<Column >
				<header>
					<Text text="Nombre" width="auto" maxLines="2"/>
				</header>
			</Column>
			<Column >
				<header>
					<Text text="Apellido" width="auto" maxLines="2"/>
				</header>
			</Column>
			<Column >
				<header>
					<Text text="Documento" width="auto" maxLines="2"/>
				</header>
			</Column>
			<Column >
				<header>
					<Text text="FechaRegistro" width="auto" maxLines="2"/>
				</header>
			</Column>

		</columns>
		<items>
			<ColumnListItem type="Active">
				<cells>
					<Text text="{KnowledgeareaCode}" />
				</cells>
				<cells>
					<Text text="{Name}" />
				</cells>
				<cells>
					<Text text="{LineKnowledgeDetails/Description}" />
				</cells>
				<cells>
					<Text text="{CreatedBy} - {CreatedFullName}" />
				</cells>
				<cells>
					<Text text="{path:'CreatedAt',formatter:'.formatter.formatDate'}" />
				</cells>
				<cells>
					<Text text="{path:'CreatedTime',formatter:'.formatter.formatterEdmTimeToTime'}" />
				</cells>
				<cells>
					<Text text="{ModifiedBy} - {ModifiedFullName} " />
				</cells>
				<cells>
					<Text text="{path:'ModifiedAt',formatter:'.formatter.formatDate'}" />
				</cells>
				<cells>
					<Text text="{path:'ModifiedTime',formatter:'.formatter.formatterEdmTimeToTime'}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>

</core:FragmentDefinition>